{% extends '::layout.html.twig' %}

{% block content %}
    <h1>Invoice success</h1>

    <div class="panel panel-default">
        <div class="panel-body">
            To: {{ invoice.recipient }}<br>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Product or service</th>
                    <th class="text-right">Unit price</th>
                    <th class="text-right">Quantity</th>
                    <th class="text-right">Total</th>
                </tr>
            </thead>
            <tbody>
                {% for line in invoice.lines %}
                    <tr>
                        <td>{{ line.description }}</td>
                        <td class="text-right">${{ line.unitPrice | number_format(2) }}</td>
                        <td class="text-right">x {{ line.quantity | number_format(2) }}</td>
                        <td class="text-right">${{ line.totalPrice | number_format(2) }}</td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3">Total</th>
                    <td class="text-right">${{ invoice.total | number_format(2) }}</td>
                </tr>
            </tfoot>
        </table>
    </div>
{% endblock %}
