{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Paints</h1>
    <p>This demo shows how the checkbox grid works given only two arrays of strings.</p>
    <p>Check some boxes and submit them.</p>

    {{ form_start(form) }}
        {{ form_row(form.paints, {label: false}) }}
        {{ form_rest(form) }}
        <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-save"></i> Save</button>
    {{ form_end(form) }}
{% endblock %}
