{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Customer</h1>
    <p>This demo shows how the collection helper works with a collection of complex objects.</p>
    <p>Enter some addresses and submit them.</p>

    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.addresses) }}
        {{ form_rest(form) }}
        <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-save"></i> Save</button>
    {{ form_end(form) }}
{% endblock %}
